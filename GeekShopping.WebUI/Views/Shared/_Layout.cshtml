<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - GeekShopping.WebUI</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900">
<header>
    <nav class="bg-zinc-800">
      <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="relative flex h-16 items-center justify-between">
          <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
            <div class="hidden sm:ml-6 sm:block">
              <div class="flex space-x-4">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-white rounded-md px-3 py-2 text-sm font-medium" aria-current="page">Home</a>
                <a asp-area="" asp-controller="Products" asp-action="Index"  class="text-zinc-300 hover:bg-zinc-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium">Products</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-zinc-300 hover:bg-zinc-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium">Privacy</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
</header>
<div class="container h-full w-full mt-4">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>